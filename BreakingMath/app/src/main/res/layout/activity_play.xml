<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ba_hung.breakingmath.PlayActivity">

    <RelativeLayout
        android:id="@+id/layout_play"
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/lbl_score"
            style="@style/SmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/lbl_score"
            android:text="0" />

        <TextView
            android:id="@+id/lbl_formular"
            style="@style/BigTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="171dp"
            android:text=" a + b " />

        <TextView
            android:id="@+id/lbl_score"
            style="@style/BigTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_formular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="= c " />

        <ImageView
            android:id="@+id/btn_correct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/lbl_score"
            android:layout_toStartOf="@+id/lbl_score"
            app:srcCompat="@drawable/correct" />

        <ImageView
            android:id="@+id/btn_wrong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/lbl_score"
            android:layout_toRightOf="@+id/lbl_score"
            android:background="#ffffff"
            app:srcCompat="@drawable/wrong" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
